<body>
    <div class="wrapper">
        <div class="container">
                    <a href="/admin/home/"><button style="margin-bottom: 40px" class="contact100-form-btn">
                        <span>
                            Back to Admin Dashboard
                            <i class="fa fa-long-arrow-left m-l-7" aria-hidden="true"></i>
                        </span>
                    </button></a>
            <div class="row">
                <div class="span12">
                    <h4>UPDATE DRIVER PRICES</h4>
                    <div class="content">
                        <div class="module">
                            <div class="module-body">
                            <% for(var i=0; i < AllDrivers.length; i++) { %>  
                            <% if (i%2==0) { %>
                                <div class="row-fluid">
                            <% } %>
                                    <div class="span6">
                                        <div class="media user">
                                            <a class="media-avatar pull-left" href="#">
                                                <img src= <%= AllDrivers[i].img %> >
                                            </a>
                                            <div class="media-body">
                                                <h3 class="media-title">
                                                    <%= AllDrivers[i].Name %>
                                                </h3>
                                                <p>
                                                    <%=AllDrivers[i].constructor%></p>
                                                    <div class="media-option btn-group shaded-icon">
                                                            <button class="btn" data-toggle="modal" data-book-id=<%= AllDrivers[i].DriverID %> data-target = "#my_modal">
                                                                UPDATE
                                                            </button>
                                                        </div>
                                            </div>
                                        </div>
                                    </div>
                            <% if (i%2==1) { %>
                                </div>
                            <% } %>
                                
                            <% } %>
                                <!--/.row-fluid-->
                                <br />
                                
                                <!--/.row-fluid-->
                                <br />
                            </div>
                        </div>
                    </div>
                    <!--/.content-->
                </div>
                <!--/.span12-->
            </div>
        </div>
        <!--/.container-->
    </div>
    <!--/.wrapper-->
    <!-- Modal -->
    <div class="modal hide" id="my_modal">
            <div class="modal-dialog">
              <div class="modal-content" >
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <!-- <h4 class="modal-title">Modal header</h4> -->
                </div>
                
			<form class="contact100-form validate-form" action="/admin/update_driver_price" method="POST">
				<span class="contact100-form-title">
					Update Driver Price
				</span>

				<!-- <div class="wrap-input100 validate-input bg1" data-validate="Please Type the Week Number">
					<span class="label-input100">Week Number *</span>
					<input class="input100" type="number" name="week_no" placeholder="Enter the Week Number" required>
                </div> -->
                <div class="wrap-input100 input100-select bg1">
					<span class="label-input100">Driver ID *</span>
					<div>
                            <input type="text" name="DriverID" value=""/>
						<div class="dropDownSelect2"></div>
					</div>
                </div>
                <div class="wrap-input100 validate-input bg1 " data-validate="Please Type the New Price">
					<span class="label-input100">New Price *</span>
					<input class="input100" type="number" name="Price" placeholder="Enter the New Price" required>
                </div>


				<div class="container-contact100-form-btn">
					<button class="contact100-form-btn">
						<span>
							Submit
							<i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
						</span>
					</button>
				</div>
			</form>

                <div class="modal-body">
                  
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
                
              </div>
